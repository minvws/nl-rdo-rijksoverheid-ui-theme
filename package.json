{
  "name": "@minvws/nl-rdo-rijksoverheid-ui-theme",
  "repository": {
    "type": "git",
    "url": "https://github.com/minvws/nl-rdo-rijksoverheid-ui-theme.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "css",
    "fonts",
    "img",
    "scss"
  ],
  "scripts": {
    "dev": "npm-run-all clean build:docs",
    "watch": "npm-run-all clean -p build:docs:watch",
    "build": "npm-run-all clean build:css build:docs:production",
    "build:css": "node scripts/build-css.js",
    "build:docs": "webpack --config html/webpack.config.js",
    "build:docs:watch": "webpack --config html/webpack.config.js --watch",
    "build:docs:production": "webpack --config html/webpack.config.js --mode=production",
    "clean": "rimraf css html/dist",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint-staged": "lint-staged",
    "lint:css": "stylelint \"scss/**/*.scss\"",
    "lint:css:fix": "npm run lint:css -- --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@minvws/manon": "^16.0.1"
  },
  "devDependencies": {
    "conventional-changelog": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "prettier": "^3.0.3",
    "puppeteer": "^21.3.4",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^5.0.1",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^10.0.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.3",
    "webpack-remove-empty-scripts": "^1.0.3",
    "zip-dir": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,json,scss,html}": "prettier --write"
  }
}
