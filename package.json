{
  "name": "@minvws/nl-rdo-rijksoverheid-ui-theme",
  "repository": {
    "type": "git",
    "url": "https://github.com/minvws/nl-rdo-rijksoverheid-ui-theme.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "css",
    "fonts",
    "img",
    "scss",
    "*.scss"
  ],
  "scripts": {
    "dev": "npm-run-all clean build:docs",
    "watch": "npm-run-all clean -p build:docs:watch",
    "build": "npm-run-all clean build:css build:docs:production",
    "build:css": "node scripts/build-css.js",
    "build:docs": "webpack --config html/webpack.config.js",
    "build:docs:watch": "webpack --config html/webpack.config.js --watch",
    "build:docs:production": "webpack --config html/webpack.config.js --mode=production",
    "clean": "rimraf css html/dist",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint-staged": "lint-staged",
    "lint:css": "stylelint \"scss/**/*.scss\"",
    "lint:css:fix": "npm run lint:css -- --fix",
    "prepare": "husky install",
    "test:screenshots": "node tests/capture-screenshots.js ./tests/screenshots/actual ./html"
  },
  "peerDepencency": {
    "@minvws/manon": "^16.3.0-beta.6"
  },
  "devDependencies": {
    "@minvws/manon": "^16.3.0-beta.6",
    "conventional-changelog": "^6.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "mini-css-extract-plugin": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "prettier": "^3.3.3",
    "puppeteer": "^22.12.0",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.77.6",
    "sass-loader": "^14.2.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.3",
    "webpack-remove-empty-scripts": "^1.0.4",
    "zip-dir": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,json,scss,html}": "prettier --write"
  }
}
