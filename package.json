{
  "name": "@minvws/nl-rdo-rijksoverheid-ui-theme",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/minvws/nl-rdo-rijksoverheid-ui-theme.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "**/*.scss",
    "fonts",
    "img",
    "LICENSES",
    "**/*.license",
    "REUSE.toml"
  ],
  "type": "module",
  "scripts": {
    "dev": "npm-run-all clean -p webpack:watch preview",
    "build": "npm-run-all clean webpack:build",
    "preview": "http-server html",
    "clean": "rimraf html/dist",
    "webpack:watch": "webpack --config html/webpack.config.js --watch",
    "webpack:build": "webpack --config html/webpack.config.js --mode=production",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "stylelint \"scss/**/*.scss\"",
    "prepare": "husky",
    "visual:ci": "node visual-test/test.js",
    "visual:report": "xdg-open visual-test/html_report/index.html || open visual-test/html_report/index.html ",
    "visual:test": "npm run build && npm run visual:pull && docker compose -f visual-test/docker-compose.yml run --rm test",
    "visual:approve": "docker compose -f visual-test/docker-compose.yml run --rm approve",
    "visual:reference": "npm run build && npm run visual:pull && docker compose -f visual-test/docker-compose.yml run --rm reference",
    "visual:pull": "docker compose -f visual-test/docker-compose.yml --profile one-off pull"
  },
  "peerDependencies": {
    "@minvws/manon": "^17.0.0"
  },
  "devDependencies": {
    "@minvws/manon": "^17.0.0",
    "backstopjs": "^6.3.25",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "fast-glob": "^3.3.2",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.92.1",
    "sass-loader": "^16.0.5",
    "serve-static": "^2.2.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-remove-empty-scripts": "^1.1.1"
  },
  "lint-staged": {
    "*.{js,json,scss,html}": "prettier --write"
  }
}
