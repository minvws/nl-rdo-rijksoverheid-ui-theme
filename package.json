{
  "name": "@minvws/nl-rdo-rijksoverheid-thema",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/minvws/nl-rdo-rijksoverheid-thema.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "npm-run-all clean css:dev js:dev",
    "watch": "npm-run-all clean -p css:watch js:watch",
    "build": "npm-run-all clean css:dev css:build js:build",
    "clean": "rimraf static/css/* static/js/*",
    "css:dev": "sass src/scss/main.scss:static/css/main.css --load-path=node_modules --no-source-map --style=compressed",
    "css:build": "node scripts/build-css.js",
    "css:watch": "npm run css:dev -- --watch",
    "js:dev": "rollup -c rollup.dev.config.js",
    "js:watch": "npm run js:dev -- --watch",
    "js:build": "rollup -c rollup.build.config.js",
    "js:check": "tsc",
    "format": "prettier --write .",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "release": "npm run build && node scripts/release.js"
  },
  "devDependencies": {
    "@minvws/manon": "^3.0.1",
    "conventional-changelog": "^3.1.24",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.2",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.37.5",
    "typescript": "^4.3.5",
    "zip-dir": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,json,scss}": "prettier --write"
  }
}
