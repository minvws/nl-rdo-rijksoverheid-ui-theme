{
  "name": "@minvws/nl-rdo-rijksoverheid-ui-theme",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/minvws/nl-rdo-rijksoverheid-ui-theme.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "npm-run-all clean css:dev",
    "watch": "npm-run-all clean -p css:watch",
    "build": "npm-run-all clean css:dev css:build",
    "build:docs": "webpack --config html/webpack.config.js",
    "build:docs:production": "webpack --config html/webpack.config.js --mode=production",
    "clean": "rimraf css",
    "css:dev": "sass scss/main.scss:css/main.css --load-path=node_modules --no-source-map --style=compressed",
    "css:build": "node scripts/build-css.js",
    "css:watch": "npm run css:dev -- --watch",
    "format": "prettier --write .",
    "lint-staged": "lint-staged",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "prepare": "husky install",
    "release": "npm run build && node scripts/release.js"
  },
  "devDependencies": {
    "@minvws/manon": "^4.0.0",
    "conventional-changelog": "^3.1.24",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "husky": "^7.0.1",
    "lint-staged": "^13.2.0",
    "mini-css-extract-plugin": "^2.7.5",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "prettier": "^2.3.2",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^4.4.1",
    "sass": "^1.60.0",
    "sass-loader": "^13.2.2",
    "stylelint": "^15.4.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1",
    "webpack-remove-empty-scripts": "^1.0.1",
    "zip-dir": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,json,scss}": "prettier --write"
  }
}
