{
  "name": "@minvws/nl-rdo-rijksoverheid-ui-theme",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/minvws/nl-rdo-rijksoverheid-ui-theme.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "npm-run-all clean css:dev",
    "watch": "npm-run-all clean -p css:watch",
    "build": "npm-run-all clean css:dev css:build",
    "clean": "rimraf static/css/*",
    "css:dev": "sass src/scss/main.scss:static/css/main.css --load-path=node_modules --no-source-map --style=compressed",
    "css:build": "node scripts/build-css.js",
    "css:watch": "npm run css:dev -- --watch",
    "format": "prettier --write .",
    "lint-staged": "lint-staged",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "prepare": "husky install",
    "release": "npm run build && node scripts/release.js"
  },
  "devDependencies": {
    "@minvws/manon": "^3.0.1",
    "conventional-changelog": "^3.1.24",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sass": "^1.37.5",
    "stylelint": "^15.4.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "zip-dir": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,json,scss}": "prettier --write"
  }
}
